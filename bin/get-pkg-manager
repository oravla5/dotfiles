#!/usr/bin/env bash

pkg_manager="unknown"

# Debian based
if [ -x "$(command -v apt-get)" ]; then pkg_manager="apt-get"
# Fedora based
elif [ -x "$(command -v dnf)" ]; then pkg_manager="dnf"
# Arch based
elif [ -x "$(command -v pacman)" ]; then pkg_manager="pacman"
# FreeBSD
elif [ -x "$(command -v pkg)" ]; then pkg_manager="pkg"
fi

echo $pkg_manager

if [ $pkg_manager == "unknown" ]; then
    exit 1
else
    exit 0
fi

